    $(document).ready(function () {
        $('#tablebaihoc').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
            }
        });

    });
    function themcthoc() {
        idcthoc = 0;
        $("[name='tenct']").val("");
        $("[name='idmonhoc']").val("");
        $("#modalCTHoc").modal("show");
    }

